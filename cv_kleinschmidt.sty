% make every occurrence of one author appear in boldface.
% http://tex.stackexchange.com/questions/33330/
% (modified to work with apa style by replacing "author" with "apaauthor" and
% basing the whole thing off of the apaauthor format in apa.bbx
\newcommand{\makeauthorbold}[1]{%
  \DeclareNameFormat{apaauthor}{%
    \ifthenelse{\value{listcount}=\maxprtauth\AND\value{listcount}<\value{listtotal}}
      {\addcomma\addspace\ldots\addspace}
      {\ifthenelse{\value{listcount}>\maxprtauth\AND\value{listcount}<\value{listtotal}}
        {}
        {\iffieldannotation{uncertain}
          {\mkbibbrackets{\usebibmacro{name:apa:family-given}%
                           {\namepartfamily}%
                           {\namepartgiven}%
                           {\namepartgiveni}%
                           {\namepartprefix}%
                           {\namepartsuffix}?}}
          {\expandafter\ifstrequal\expandafter{\namepartfamily}{#1}
            {\mkbibbold{%
                {\usebibmacro{name:apa:family-given}%
                  {\namepartfamily}%
                  {\namepartgiven}%
                  {\namepartgiveni}%
                  {\namepartprefix}%
                  {\namepartsuffix}}}}
            {\usebibmacro{name:apa:family-given}%
              {\namepartfamily}%
              {\namepartgiven}%
              {\namepartgiveni}%
              {\namepartprefix}%
              {\namepartsuffix}}}}}
      \ifthenelse{\value{listcount}=\value{listtotal}}%
        {\ifmorenames{\printdelim{andothersdelim}\bibstring{andothers}}{}}{}}}

\makeauthorbold{Kleinschmidt}

